{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "../",
    "baseUrl": "./",
    "outDir": "./build",
    "paths": {
      "@/*": ["../src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": ["build", "coverage", "node_modules", "__tests__"]
}
